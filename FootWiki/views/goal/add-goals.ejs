<%- include ('../partials/header.ejs') %>
<h4><a href="/match/display" class="back btn btn-md btn-warning">Back</a></h4>
    <div class="container">
       <h1>Enter goal details(All fields mandatory)</h1>
        <form class="add-player-form" action="" method="post" enctype="multipart/form-data">
            <div class="form-row">
				<div class="form-group col-md-6">
					<input type="number" class="form-control" name="match_id" id="match_id" placeholder="match ID" required>
				</div>
                <div class="form-group col-md-6">
                    <input type="number" class="form-control" name="goal_id" id="goal_id" placeholder="Goal ID" required>
                </div>
            </div>
			<div class="form-row">
				<div class="form-group col-md-6">
                    <input type="number" class="form-control" name="time" id="time" placeholder="Goal Time" required>
                </div>
				<div class="form-group col-md-6">
                    <input type="number" class="form-control" name="player_id" id="player_id" placeholder="Player ID" required>
                </div>
			</div>
            <button type="submit" class="btn btn-primary float-right">Add Goal</button>
        </form>
    </div>
<%- include ('../partials/footer.ejs') %>
