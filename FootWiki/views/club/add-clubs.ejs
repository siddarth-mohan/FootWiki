<%- include ('../partials/header.ejs') %>
<h4><a href="/club" class="back btn btn-md btn-warning">Back</a></h4>
    <div class="container">
       <h1>Enter club details(All fields mandatory)</h1>
        <form class="add-player-form" action="" method="post" enctype="multipart/form-data">
            <div class="form-row">
				<div class="form-group col-md-6">
					<input type="number" class="form-control" name="club_id" id="club_id" placeholder="Club ID" required>
				</div>
                <div class="form-group col-md-6">
                    <input type="text" class="form-control" name="name" id="name" placeholder="Club Name" pattern="[A-Za-z]{1,20}" required>
                </div>
            </div>
			<div class="form-row">
				<div class="form-group col-md-6">
                    <input type="text" class="form-control" name="home_stadium" id="home_stadium" pattern="[A-Za-z]{1,20}" placeholder="Home Stadium" required>
                </div>
				<div class="form-group col-md-6">
                    <input type="text" class="form-control" name="country" id="country" pattern="[A-Za-z]{1,20}" placeholder="Country" required>
                </div>
			</div>
            
                <div class="col-md-12">
                    <label for="player-img"><b>Club Image</b></label><br>
                    <input type="file" name="image" id="player-img" class="" >
                </div>
            <button type="submit" class="btn btn-primary float-right">Add Club</button>
        </form>
    </div>
<%- include ('../partials/footer.ejs') %>
